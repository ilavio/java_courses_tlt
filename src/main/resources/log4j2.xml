<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="Debug">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %c{1} %-5level %logger{36} - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name= "com.potemkin.i" level="debug" additivity="false">
           <AppenderRef ref="Console"/>
        </Logger>
 
        <!-- Root Logger -->
        <Root level="Debug">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>